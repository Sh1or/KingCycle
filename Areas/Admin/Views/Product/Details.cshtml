@model App.Models.Product

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<style>
    dl.row {
        border: 1px solid;
        margin-left: 0;
    }

    dl.row dt {
        border-right: 1px solid;
        border-bottom: 1px solid;
        padding: 1%;
    }
</style>

<body>

    <div class="row">
        <div class="col-md-6">
            <h4>Sản Phẩm</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DiscountPrice)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DiscountPrice)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Slug)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Slug)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DateCreated)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DateUpdated)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DateUpdated)
                </dd>
                <dt class="col-sm-4">
                    Thương hiệu
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Brand.Name)

                </dd>
                <dt class="col-sm-4">
                    Ảnh Chính
                </dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.MainImage))
                    {
                        <img src="~/images/products/@Model.Slug/@Model.MainImage" alt="@Model.Name"
                            style="max-width: 200px;" />
                    }
                    else
                    {
                        <p>No main image available</p>
                    }
                </dd>
                <dt class="col-sm-4">
                    Ảnh Phụ
                </dt>
                <dd class="col-sm-8">
                    @if (Model.SubImages != null && Model.SubImages.Any())
                    {
                        @foreach (var subImage in Model.SubImages)
                        {
                            <img src="~/images/products/@Model.Slug/subImg/@subImage" alt="@Model.Name"
                                style="max-width: 100px;" />
                        }
                    }
                    else
                    {
                        <p>No sub images available</p>
                    }
                </dd>
                <dt style="border-bottom: none;" class="col-sm-4">
                    Thể Loại
                </dt>
                <dd class="col-sm-8">
                    @if (Model.ProductCategories != null && Model.ProductCategories.Any())
                    {
                        @foreach (var productCategory in Model.ProductCategories)
                        {
                            <span class="badge bg-secondary">@productCategory.Category.Title</span>
                        }
                    }
                    else
                    {
                        <p>No categories assigned</p>
                    }
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            <h4>Thông Số Kĩ Thuật</h4>
            <hr />
            @if (Model.DetailsDictionary != null && Model.DetailsDictionary.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Tên Thông Số</th>
                            <th>Giá Trị Thông Số</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model.DetailsDictionary)
                        {
                            <tr>
                                <td>@detail.Key</td>
                                <td>@detail.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No specifications available</p>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h4>Mô Tả Sản Phẩm</h4>
            <hr />
            <div>
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>
    <hr>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        <script src="https://cdn.tiny.cloud/1/d51bskdfs25amewl89wyimb34fzqqpq1xuyy6qcaosi9fwin/tinymce/6/tinymce.min.js"
            referrerpolicy="origin"></script>
        <script>
            // Initialize TinyMCE for any textareas that you want to use in the page (if any).
            tinymce.init({
                selector: 'textarea',
                plugins: 'image link media table',
                toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | outdent indent | link image | table',
                height: 300,
                menubar: false,
                branding: false
            });
        </script>
    }
</body>
