@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="d-flex justify-content-center "> 
    <img
  src="/image/logo.png"
  class=" img shadow-2-strong"
  alt="LOGO"
/>
</div>
<h1 class="d-flex justify-content-center">@ViewData["Title"].</h1>
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserNameOrEmail" class="control-label"></label>
                        <input asp-for="UserNameOrEmail" class="form-control" />
                        <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                       <p class="d-flex justify-content-between align-items-center"> <!-- Chỉnh sửa dòng này -->
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Chưa có tài khoản? Đăng ký</a>
                    <a class="justify-content-right " asp-action="ForgotPassword">Quên mật khẩu?</a>
                </p>
                </div>
                <div class="form-group">
                     <div class="row justify-content-center ">
                <button type="submit" class="mt-2 btn btn-outline-primary btn-rounded btn-block">ĐĂNG NHẬP</button>
            </div>
                </div>
             
           
            <div>
                <section>
                    @{
                        var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
                        var loginProviders = schemes.ToList();
                        if (loginProviders.Count == 0)
                        {
                            <div>
                                <p>
                                    Ứng dụng chưa hỗ trợ đăng nhập từ tài khoản ngoài
                                </p>
                            </div>
                        }
                        else
                        {
                            <form asp-controller="Account" asp-action="ExternalLogin" 
                            asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                                 <div>
                                    <p class=" row justify-content-center">
                                        @foreach (var provider in loginProviders)
                                        {
                                            <button type="submit" class="mt-2 btn btn-outline-primary btn-rounded" 
                                            name="provider" value="@provider.Name" title="Log in using your @provider.Name account">
                                                @switch(provider.Name)
                                                {
                                                    case "Google":
                                                        <i class="fab fa-google"></i> <!-- Sử dụng font awesome icon -->
                                                        break;
                                                    case "Facebook":
                                                        <i class="fa-brands fa-facebook-f"></i> <!-- Sử dụng font awesome icon -->
                                                        break;                                                        default:
                                                        @provider.Name <!-- Hiển thị tên nhà cung cấp nếu không có icon -->
                                                        break;
                                                }
                                            </button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
